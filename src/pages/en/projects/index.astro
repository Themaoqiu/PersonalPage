---
import PageLayout from '@/layouts/CommonPage.astro'
import ProjectSection from '@/components/projects/ProjectSection.astro'
import config from '@/site-config'

import { Button, Icon } from '@/components/user'

const headings = [
  { depth: 2, slug: 'projects', text: 'Projects' },
  { depth: 2, slug: 'sponsorship', text: 'Sponsorship' }
]
---

<PageLayout title='Projects' {headings} info={{ slug: '/projects', hideComment: true }}>
  <p>
    If you find my projects helpful or interesting, consider sponsoring me to keep me motivated.
  </p>
  <Button title='Checkout sponsorship' class='w-fit' href='#sponsorship'>
    <Icon class='size-5' name='receive-money' slot='before' />
  </Button>

  <h2 id='projects'>Projects</h2>
  <ProjectSection
    project={[
      {
        name: 'Project 1',
        description: 'Project description 1. You can introduce the main features here.',
        image: 'lumina.webp',
        links: [{ type: 'site', href: '#' }]
      },
      {
        name: 'Project 2',
        description: 'Project description 2. You can introduce the main features here.',
        image: 'byddl.webp',
        links: [
          { type: 'site', href: '#' },
          { type: 'github', href: '#' }
        ]
      }
    ]}
  />

  <!-- sponsorship -->
  <h2 id='sponsorship'>Sponsorship</h2>
  <p>Thank you for your support! If you're interested in sponsoring my projects, feel free to contact me.</p>
</PageLayout>

<script
  is:inline
  type='module'
  data-astro-rerun
  define:vars={{ npmCDN: config.npmCDN, walineServer: config.integ.waline.server }}
>
  const normalizePath = (path) => {
    if (path === '/') return path
    return path.endsWith('/') ? path.slice(0, -1) : path
  }

  const loadPageviewCount = async () => {
    const pageview = await import(`${npmCDN}/@waline/client@v3/dist/pageview.js`)
    pageview.pageviewCount({
      serverURL: walineServer,
      path: normalizePath(window.location.pathname)
    })
  }

  await loadPageviewCount()
</script>
